<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.pur.purreceive.mapper.PurReceiveDetailMapper">

	<delete id="deleteByMainId" parameterType="java.lang.String">
		DELETE 
		FROM  pur_receive_detail 
		WHERE
			 pid = #{mainId} 	</delete>
	
	<select id="selectByMainId" parameterType="java.lang.String" resultType="org.jeecg.modules.pur.purreceive.entity.PurReceiveDetail">
		SELECT * 
		FROM  pur_receive_detail
		WHERE
			 pid = #{mainId} 	</select>
	<select id="selectReceiveQtyByOrderIds"
			parameterType="java.util.List"
			resultType="java.lang.Double">

		SELECT
		IFNULL(SUM(t0.receive_qty), 0)
		FROM pur_receive_detail t0
		INNER JOIN pur_receive t1 ON t0.pid = t1.id
		WHERE t1.audit = 1
		AND t1.del_flag = 0
		AND t0.order_detail_id IN
		<foreach collection="list"
				 item="id"
				 open="("
				 separator=","
				 close=")">
			#{id}
		</foreach>

	</select>

</mapper>
